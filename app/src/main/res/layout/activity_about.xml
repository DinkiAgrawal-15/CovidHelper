<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/green"
        android:padding="20dp"
        android:elevation="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                app:civ_border_color="#000"
                app:civ_border_width="0.7dp"
                android:src="@drawable/profile" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Siridi Nath"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Android Developer"
                android:textColor="#000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/linked"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:onClick="openlinked"
                    android:src="@drawable/l5" />

                <ImageView
                    android:id="@+id/github"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:onClick="openGit"
                    android:src="@drawable/github"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/insta"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:onClick="openInsta"
                    android:src="@drawable/instagram"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:onClick="openTwitter"
                    android:src="@drawable/twitter"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:elevation="20dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dinkidp"
                    app:civ_border_color="#000"
                    app:civ_border_width="0.7dp" />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Dinki Agrawal"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Android Developer"
                android:textColor="#000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25sp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/linked2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="TODO"
                    android:onClick="openlinked2"
                    android:src="@drawable/l5" />

                <ImageView
                    android:id="@+id/github2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="TODO"
                    android:onClick="openGit2"
                    android:src="@drawable/github"
                    app:srcCompat="@drawable/github" />

                <ImageView
                    android:id="@+id/insta2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:onClick="openInsta2"
                    android:src="@drawable/instagram"
                    app:srcCompat="@drawable/instagram" />

                <ImageView
                    android:id="@+id/twitter2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:onClick="openTwitter2"
                    android:src="@drawable/twitter" />
            </LinearLayout>
        </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/tomato"
                android:text="Credits"
                android:layout_marginLeft="30dp"/>

            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="35dp"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="@string/credits"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginStart="30dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="35dp"
          android:layout_marginBottom="10dp"
          android:text="@string/owner_text"
          android:textAlignment="textStart"
          android:textColor="#fff"
          android:textSize="20sp"
          android:textStyle="italic"
          tools:ignore="RtlCompat" />
  </LinearLayout>
    </ScrollView>


